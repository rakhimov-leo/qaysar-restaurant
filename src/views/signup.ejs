<%- include('includes/header') %>
<link rel="stylesheet" href="/css/signup.css" />

<body>
  <div class="signup-container">
    <form
      onsubmit="return validateSignupForm()"
      action="/admin/signup"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="signup-frame">
        <div class="signup-top">
          <span>Signup</span>
          <div>Go back <a href="/admin" style="color: #ffe1c6">Home</a></div>
          <p>
            Already signed up?
            <a href="/admin/login" style="color: #ffe1c6">Login</a>
          </p>
        </div>

        <div class="sign-input-frame">
          <div class="sign-up-frame">
            <label>Restaurant *</label>
            <input
              type="text"
              name="memberNick"
              class="member-nick"
              placeholder="Restaurant name"
            />
          </div>
          <div class="sign-up-frame">
            <label>Phone *</label>
            <input
              type="text"
              name="memberPhone"
              class="member-phone"
              placeholder="Phone"
            />
          </div>
        </div>

        <div class="sign-input-frame">
          <div class="sign-up-frame">
            <label>Password *</label>
            <input
              type="password"
              name="memberPassword"
              class="member-password"
              placeholder="Password"
            />
          </div>
          <div class="sign-up-frame">
            <label>Repeat password *</label>
            <input
              type="password"
              name="confirmPassword"
              class="confirm-password"
              placeholder="Repeat password"
            />
          </div>
        </div>

        <div class="media-frame">
          <div class="upload-img-frame">
            <img id="preview-img" src="/img/default.jpeg" alt="Preview" />
          </div>

          <div class="upload-container">
            <span class="media-text">Product image</span>
            <div class="file-box">
              <input class="upload-name" value="Choose image" disabled />
              <label for="input-file" class="file-input-label"
                >Upload Image</label
              >
              <input
                type="file"
                id="input-file"
                class="upload-hidden member-image"
                name="memberImage"
              />
            </div>
            <p class="thumbnail-desc">
              Please upload restaurant image.<br />
              Only: .jpg, .jpeg, .png allowed!
            </p>
          </div>
        </div>

        <input type="hidden" name="memberType" value="RESTAURANT" />
        <button class="signup-btn" type="submit">Signup</button>
      </div>
    </form>
  </div>

  <script src="/js/signup.js"></script>
</body>
<%- include('includes/footer') %>
